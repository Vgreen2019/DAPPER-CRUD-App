@model ProductsViewModel

@{
    ViewData["Title"] = "SearchProductResults";
}

    <body class="products">
        <h2>Results</h2>

        <div>
            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>

                            <td>
                                <a asp-controller="Northwind" asp-action="ProductInfo" asp-route-id="@product.ID">@product.Name</a>
                            </td>
                            <td>
                                <a asp-controller="Northwind" asp-action="EditProduct" asp-route-id="@product.ID"><button class="productbtn">Edit</button></a>
                            </td>
                            <td>
                                <a asp-controller="Northwind" asp-action="RemoveProductResults" asp-route-id="@product.ID"><button class="productbtn">Delete</button></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <a asp-area="" asp-controller="Northwind" asp-action="SearchProduct"><button class="productbtn">Search Another Product</button></a>

        </div>
    </body>