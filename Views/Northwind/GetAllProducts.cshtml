@model ProductsViewModel

@{
    ViewData["Title"] = "GetAllProducts";
}

<h2>Products</h2>

<div>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                


            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    
                    <td>
                        <a asp-controller="Northwind" asp-action="ProductInfo" asp-route-id="@product.ID">@product.Name</a>
                    </td> 
                    <td>
                        <a asp-controller="Northwind" asp-action="EditProduct" asp-route-id="@product.ID"><button class="btn btn-warning">Edit</button></a>
                    </td>
                    <td>
                        <a asp-controller="Northwind" asp-action="RemoveProductResults" asp-route-id="@product.ID"><button class="btn btn-warning">Delete</button></a>
                    </td>
                </tr>
             }
        </tbody>
    </table>
</div>
<div>
    <a asp-area="" asp-controller="Northwind" asp-action="AddProduct"><button>Add A Product</button></a>

</div>

